{
  "compilerOptions": {
    "target": "ES6", 
    "module": "commonjs", 
    "esModuleInterop": true,           
    "forceConsistentCasingInFileNames": true, 
    "strict": true,
    "skipLibCheck": true, 
    "rootDir": "./src",
    "outDir": "./dist",
  },

  "include": ["src/**/*"],
  "exclude": [
    "dist",
    "jest.config.ts",
    "tests/**/*", 
    "node_modules"
  ]

}
